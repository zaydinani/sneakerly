{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
    "name": "woolentor/quickview-product-image",
    "category": "woolentor-single-product",
    "title": "WL: Quickview Product Image",
    "description":"Display Quickview Image for Quickview template.",
    "keywords": ["woolentor","quickview","image","quickview product image","quickview image"],
    "render": "file:./index.php",
    "supports": {
        "align": [ "wide", "full" ]
    },
    "example": {
        "attributes": {
            "preview": true
        }
    },
    "attributes": {
        "blockUniqId":{
            "type": "string",
            "default": ""
        },
        "preview": {
            "type": "boolean",
            "default": false
        },
        "areaPadding": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} { padding: {{areaPadding}}; }"
            }
        },
        "areaBGProperty":{
            "type": "object",
            "default": {
                "imageId": null,
                "imageUrl":"",
                "position": "",
                "attachment": "",
                "repeat": "",
                "size": ""
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}}"
            }
        },

        "mainImageMargin": {
            "type": "object",
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .ht-quick-view-single{ margin:{{mainImageMargin}}; }"
            }
        },
        "mainImageBorder":{
            "type":"object",
            "style" : {
                "selector":"#htwlquick-viewmodal.woocommerce div.product {{WOOLENTOR_WRAPPER}} .woocommerce-product-gallery__image img,{{WOOLENTOR_WRAPPER}} .woocommerce-product-gallery__image img"
            }
        },
        
        "thumbnailImageMargin": {
            "type": "object",
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .ht-quick-thumb-single{ margin:{{thumbnailImageMargin}}; }"
            }
        },
        "thumbnailImageBorder":{
            "type":"object",
            "style" : {
                "selector":".ht-quick-view-thumbnails .ht-quick-thumb-single img"
            }
        }

    }
}