{
	"apiVersion": 2,
	"$schema": "https://schemas.wp.org/trunk/block.json",
    "name": "woolentor/product-thumbnails-zoom-image",
    "category": "woolentor-single-product",
    "title": "WL: Product Image With Zoom",
    "description":"Display Product Image with zoom for product details page.",
    "keywords": ["woolentor","product","single","zoom","gallery","product image zooom","single product zoom"],
    "attributes": {
        "blockUniqId":{
            "type": "string",
            "default": ""
        },
        "areaPadding": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} { padding: {{areaPadding}}; }"
            }
        },
        "areaBGProperty":{
            "type": "object",
            "default": {
                "imageId": null,
                "imageUrl":"",
                "position": "",
                "attachment": "",
                "repeat": "",
                "size": ""
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}}"
            }
        },

        "thumbnailsSliderItems":{
            "type":"number",
            "default":4
        },

        
        "tabsliderActiveThumbBorderColor":{
            "type":"string",
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-thumbs .slick-current img{ border-color:{{tabsliderActiveThumbBorderColor}}!important; }"
            }
        },
        "productThubImageBorder":{
            "type":"object",
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-thumbs .sm-image img"
            }
        },
        "productThubImageBorderRadius": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-thumbs img{ border-radius:{{productThubImageBorderRadius}}; }"
            }
        },
        "productImageArePadding": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-thumbs .sm-image{ padding:{{productImageArePadding}}; }"
            }
        },
        "tabsliderArrowColor":{
            "type":"string",
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-thumbs .slick-arrow,{{WOOLENTOR_WRAPPER}} .wl-product-details-images .slick-arrow{ color:{{tabsliderArrowColor}}; }"
            }
        },

        "productImageBorder":{
            "type":"object",
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-images"
            }
        },
        "productImageBorderRadius": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-images,{{WOOLENTOR_WRAPPER}} .wl-product-details-images img{ border-radius:{{productImageBorderRadius}}; }"
            }
        },
        "productImageAreaMargin": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-images{ margin:{{productImageAreaMargin}}; }"
            }
        },
        "productImageAreaPadding": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "style" : {
                "selector":"{{WOOLENTOR_WRAPPER}} .wl-product-details-images{ padding:{{productImageAreaPadding}}; }"
            }
        }
        
    }
}