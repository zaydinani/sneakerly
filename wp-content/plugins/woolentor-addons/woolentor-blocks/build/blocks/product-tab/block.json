    "priceSize": {
      "type": "string",
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} .product-item .product-inner .content .price,{{WOOLENTOR_WRAPPER}} .product-item .product-inner .content .price .amount{ font-size: {{priceSize}}; }"
