      "type": "string",
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} .product-item .product-inner .content .title a{ color: {{titleColor}}; }"
      }
    },
    "titleHoverColor": {
      "type": "string",
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} .product-item .product-inner .content .title a:hover{ color: {{titleHoverColor}}; }"
